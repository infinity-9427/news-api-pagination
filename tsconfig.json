{
  "compilerOptions": {
    "module": "es2022",
    "moduleResolution": "node",
    "baseUrl": "src",
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitAny": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["src/**/*"]
}
